list1=[1,2]
list2=[]
x=0
while list1[len(list1)-1]<4000000:
    y=list1[x]+list1[x+1]
    list1.append(y)
    x+=1
#Remove last term of list1 -- find a better way to do this
list1.remove(list1[len(list1)-1])
print(list1)
for i in range(1,len(list1)):
    if list1[i]%2==0:
        print(list1[i])
        list2.append(list1[i])
    i+=1
z=sum(list2)
print (z)
